{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "composite": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "incremental": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "removeComments": true,
    "paths": {
      "solid-pixi": ["./packages/solid-pixi/src/index.tsx"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
